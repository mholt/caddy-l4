# Example xcaddyfile using the new l4.server block type
# Test with: echo "hello world" | nc localhost 5000

[global] {
	admin off
	log {
		level DEBUG
	}
}

# Echo server on port 5000 - sends back whatever you send
[l4.server] :5000 {
	route {
		echo
	}
}

# Echo server on port 5001 - another echo example
[l4.server] :5001 {
	route {
		echo
	}
}
